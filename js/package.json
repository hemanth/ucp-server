{
  "name": "ucp-server",
  "version": "1.0.0",
  "description": "Generate UCP-compliant servers for merchants from a simple schema",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ucp-server": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "init": "ts-node src/cli.ts init",
    "serve": "ts-node src/cli.ts serve",
    "validate": "ts-node src/cli.ts validate",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "ucp",
    "commerce",
    "checkout",
    "agentic",
    "ai-commerce"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@paypal/paypal-server-sdk": "^2.2.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "pino": "^10.3.0",
    "stripe": "^20.3.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
